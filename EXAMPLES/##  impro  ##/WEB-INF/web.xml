  </servlet>

  <servlet-mapping>
	<servlet-name>app013</servlet-name>
	<url-pattern>/institute_categories.do</url-pattern>
  </servlet-mapping>







  <listener>
	<listener-class>listeners.AppListener</listener-class>
  </listener>

</web-app>
