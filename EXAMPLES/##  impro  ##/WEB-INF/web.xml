	<servlet-name>app006</servlet-name>
	<servlet-class>controllers.AccountActivationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app006</servlet-name>
	<url-pattern>/activate_account.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app007</servlet-name>
	<servlet-class>controllers.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app007</servlet-name>
	<url-pattern>/login.do</url-pattern>
  </servlet-mapping>




  <servlet>
	<servlet-name>app008</servlet-name>
	<servlet-class>controllers.DPUploadServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app008</servlet-name>
	<url-pattern>/dp_upload.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app009</servlet-name>
	<servlet-class>controllers.ShowDPServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app009</servlet-name>
	<url-pattern>/showdp.do</url-pattern>
  </servlet-mapping>



