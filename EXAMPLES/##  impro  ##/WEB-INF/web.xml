	<servlet-name>app012</servlet-name>
	<servlet-class>controllers.SaveCategoriesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app012</servlet-name>
	<url-pattern>/save_cats.do</url-pattern>
