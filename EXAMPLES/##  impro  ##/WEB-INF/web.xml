	<servlet-name>app010</servlet-name>
	<servlet-class>controllers.ShowCategoryPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app010</servlet-name>
	<url-pattern>/show_categories.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app011</servlet-name>
	<servlet-class>controllers.CollectCategoriesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app011</servlet-name>
	<url-pattern>/allcats.do</url-pattern>
  </servlet-mapping>


