	<servlet-name>app002</servlet-name>
	<servlet-class>controllers.ShowSignupServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app002</servlet-name>
	<url-pattern>/show_signup.do</url-pattern>
  </servlet-mapping>


  <servlet>
	<servlet-name>app003</servlet-name>
	<servlet-class>controllers.SearchCitiesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app003</servlet-name>
	<url-pattern>/searchcity.do</url-pattern>
  </servlet-mapping>


  <servlet>
	<servlet-name>app004</servlet-name>
	<servlet-class>controllers.SignupServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app004</servlet-name>
	<url-pattern>/signup.do</url-pattern>
  </servlet-mapping>



